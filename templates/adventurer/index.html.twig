{% extends 'base.html.twig' %}
{% block title %}Aventurier {{ app.user.name }}{% endblock %}
{% block body %}
    <div class="container h-100">
        <h1 class="text-center">Bienvenue {{ app.user.name }}</h1>
        <div class="d-flex flex-row justify-content-center mb-2">
            <a class="btn btn-primary" href="{{ path('asset_new') }}">Ajouter un trésor</a>
        </div>
        <h5 class="text-center">Voici vos trésors déposés dans la salle :</h5>
        {% for asset in assets %}
            <a href="{{ path('asset_show',{id: asset.id}) }}">
                <div class="card w-100 d-md-flex mb-3 p-2 flex-md-row align-items-center justify-content-center">
                    <img src="{{ asset.photo }}" class="photo-detail"
                         alt="{{ asset.photo }}">
                    <div class="card-body w-100">
                        <h5 class="card-title">{{ asset.title }}</h5>
                        <p class="card-text">lieu de découverte : {{ asset.place_of_discovery }}</p>
                        <p class="card-text">date de dépot : {{ asset.deposit_date  |date("d/m/Y") }}</p>
                        <p class="card-text">valeur : {{ asset.value }} $</p>
                    </div>
                </div>
            </a>
        {% else %}
            <p class="text-center">vous n'avez pas encore de trésor</p>
        {% endfor %}
    </div>
{% endblock %}
