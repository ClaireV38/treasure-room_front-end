{% extends 'base.html.twig' %}

{% block title %}Asset{% endblock %}

{% block body %}
    <div class="container">
        <div class="jumbotron p-md-3 mt-md-4">
            <h1 class="text-center">{{ asset.title }}</h1>
            <img src="{{ asset.photo }}" class="photo-detail" alt="{{ asset.photo }}">

            <hr class="my-4">
            <table class="table">
                <tbody>
                {% if asset.owner %}
                    <tr>
                        <th>propriétaire</th>
                        <td>{{ asset.owner.name }}</td>
                    </tr>
                {% endif %}
                <tr>
                    <th>lieu de découverte</th>
                    <td>{{ asset.place_of_discovery }}</td>
                </tr>
                <tr>
                    <th>date de dépôt</th>
                    <td>{{ asset.deposit_date ? asset.deposit_date|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Valeur</th>
                    <td>{{ asset.value }}$</td>
                </tr>
                {% if asset.category %}
                    <tr>
                        <th>Catégorie</th>
                        <td>{{ asset.category.name }}</td>
                    </tr>
                {% endif %}
                </tbody>
            </table>
            <div class="d-flex flex-row justify-content-around">
                <a class="btn btn-primary" href="{{ app.request.headers.get('referer') }}">retour</a>
                <a class="btn btn-primary" href="{{ path('asset_edit', {'id': asset.id}) }}">éditer</a>
                {{ include('asset/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
